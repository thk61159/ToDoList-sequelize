{{> navBar logout = 'logout'}}
<main class="mt-5">
  <div class='container mt-3'>
    <form action="/todos/{{ todo.id }}?_method=PUT" method="POST">
      <div class="input-group">
        <div class="input-group-text">
          <input type="checkbox" name="isDone" {{#if todo.isDone}}checked{{/if}}>
        </div>
        <input class="form-control " type="text" name="name" placeholder="name" value="{{ todo.name }}">
        <button class="btn btn-success " type="submit">Save</button>
      </div>
    </form>
    <a class="btn btn-outline-secondary d-block mx-auto mt-3" href="javascript:history.back()">Back</a>
  </div>
</main>